<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:id="@+id/profile_details"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Profile Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/profile_image"/>
            <EditText
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_below="@+id/profile_details"
                android:hint="Please provide your name"/>
            <EditText
                android:id="@+id/profile_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="number"
                android:layout_margin="10dp"
                android:layout_below="@+id/profile_name"
                android:hint="Plese provide your phone Number" />
            <EditText
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_below="@+id/profile_number"
                android:hint="Plese provide your Email" />
            <TextView
                android:id="@+id/profile_set_question"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Set Question"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textSize="24dp"
                android:layout_below="@+id/profile_email"/>
            <TextView
                android:id="@+id/profile_hint"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/profile_set_question"
                android:text="It will help you when you forget your password"/>
            <EditText
                android:id="@+id/profile_question1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="Your pet name"
                android:layout_below="@+id/profile_hint"/>
            <EditText
                android:id="@+id/profile_question2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="Your favorite season"
                android:layout_below="@+id/profile_question1"/>
            <Button
                android:id="@+id/profile_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Upload"
                android:textStyle="bold"
                android:textSize="24dp"
                android:background="@drawable/button"
                android:textColor="#000000"
                android:layout_below="@+id/profile_question2"                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>