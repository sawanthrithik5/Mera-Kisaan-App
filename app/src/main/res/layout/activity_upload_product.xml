<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.UploadProductActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="410dp"
                android:layout_height="250dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/crop"/>
            <TextView
                android:id="@+id/product_details"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Crop Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/product_image"/>
            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_below="@+id/product_details"
                android:hint="Product Name"/>
            <EditText
                android:id="@+id/product_discription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_below="@+id/product_name"
                android:hint="Product Description" />
            <EditText
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_below="@+id/product_discription"
                android:hint="Quantity you have in KG" />
            <EditText
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_below="@+id/product_quantity"
                android:hint="Price to sell" />
            <Button
                android:id="@+id/product_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Upload"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                android:textColor="#000000"
                android:layout_below="@+id/product_price"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>