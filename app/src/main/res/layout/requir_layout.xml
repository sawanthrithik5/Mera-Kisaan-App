<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="#5435">

        <TextView
            android:id="@+id/rcropName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Crop Name"
            android:textColor="#000000"
            android:textSize="24dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rcroplastdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Crop Description"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@+id/rcropName"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rcroplastdate">
            <TextView
                android:id="@+id/rcropQuantity"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="Crop Quantity"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/rcropPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="Crop Price"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>